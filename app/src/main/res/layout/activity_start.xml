<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartGameActivity"
    android:background="@drawable/openingscreen">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/start_game_TEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "@string/choose_how_to_play"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_marginTop="800dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:gravity="center"/>

    <!-- כפתור לטבלת שיאים -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/start_BTN_LeaderBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/leaderboard"
        android:textSize="20sp"
        android:layout_marginTop="750dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:backgroundTint="@color/lightBlue_700"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp" >

        <!-- כפתור למשחק עם סנסורים -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/start_BTN_SensorMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sensors"
            android:textSize="25sp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/lightBlue_700" />

        <!-- כפתור למשחק עם כפתורים -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/start_BTN_ButtonMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttons"
            android:textSize="25sp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/lightBlue_700" />
    </LinearLayout>

</RelativeLayout>
