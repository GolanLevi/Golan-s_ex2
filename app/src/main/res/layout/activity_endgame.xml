<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/endgamesceen"
    tools:context=".ScoreActivity">


    <LinearLayout
        android:id="@+id/end_game_LBL_text"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:gravity="center"
        android:orientation="vertical"
        >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/end_LBL_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:textStyle="bold"
            tools:text="STATUS"
            android:layout_weight="1"/>



        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/end_LBL_YourScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Final score:"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_weight="1">
        </com.google.android.material.textview.MaterialTextView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/end_LBL_finalScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:textStyle="bold"
            tools:text="000"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/end_EditText_Name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:ems="8"
            android:inputType="text"
            android:hint="Name"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginBottom="300dp" >

        <!-- כפתור למשחק עם סנסורים -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/end_BTN_SaveYourScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save your Score 💯"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/lightBlue_700" />

        <!-- כפתור למשחק עם כפתורים -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/end_BTN_PlayAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play again 🏎️"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/lightBlue_700" />
    </LinearLayout>


</RelativeLayout>